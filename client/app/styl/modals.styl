// Onboarding Div
#onboarding {
	popover(80%, 80%, 300)
	
	font-size: 1.3em
	line-height: 1.3em

	h2{
		margin: 0
		padding: 0
		font-size: 2em
		line-height: 1em
	}

	figure{
		width: 90%;
		margin: 10px auto;
		padding: 5px;
		border-radius: 10px;
		border: 1px solid black;

		& > img{
			display: block;
			margin: 5px auto;
			max-width: 100%
		}
	}

	#onboarding-start{
		color: colorbtn
		background-color: color1
		background-image: linear-gradient(color2, color1, to bottom);
		background-image: radial-gradient(ellipse at center,
			color2 0%,
			color1 100%);
		display: block;
		margin: 10px auto;
		padding: 0.5em;
		font-size: 1.5em;
		cursor: pointer;
		border-radius: 1em;
		border: none;
		background-color: blue;

		&:active{
			background-color: #ffa84c;
			background-image: linear-gradient(color2, color3, to bottom);
			background-image: radial-gradient(ellipse at center,
				color2 0%,
				color3 100%);
		}
	}
}

