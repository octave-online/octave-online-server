// Create Bucket
#create_bucket {
	popover(80%, 80%, 310)
	bucket_bar_height = 40px
	
	#create-bucket-content {
		position: absolute
		top: modal_header_height
		left: 0
		right: 0
		bottom: bucket_bar_height
		overflow: auto

		p {
			font-size: 1.1em
			margin: 10px
		}

		h3 {
			font-size: 1.4em
			border-bottom: 2px solid color2
			margin: 10px
			clear: both
		}

		.bucket-files-fieldset {
			width: 40%
			margin: 0 2% 15px
			padding: 1%
			height: 150px

			legend {
				font-weight: bold
			}

			select {
				display: block
				width: 100%
				height: 130px
			}

			&.left {
				float: left
			}
			&.right {
				float: right
			}
		}

		.bucket-file-move-btns {
			margin-top: 80px
			text-align: center
		}

		.last {
			margin-top: 15px
			border-top: 2px solid color2
			padding-top: 5px
		}
	}

	#create-bucket-bar {
		position: absolute
		bottom: 0
		left: 0
		right: 0
		height: bucket_bar_height
		background-color: color1
		text-align: right
		border-bottom: 5px solid colorbtn

		#create-bucket-btn {
			background-color: transparent
			font-size: 28px
			padding-top: 4px
			margin-right: 4px
			border: none
			cursor: pointer
			color: colorbtn
		}
	}

	#create-bucket-spinner {
		position: absolute;
		top: 50%;
		left: 50%;
		height: auto;
		width: 20%;
		margin-left: -10%;
		margin-top: -10%;
	}
}

