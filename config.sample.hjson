# # # # # # # # # # # # #
# Common configurations #
# # # # # # # # # # # # #

redis: {
  hostname: localhost
  port: 6379
  options: {
    auth_pass: xxxxxxxxx
  }
}

mongo: {
  hostname: localhost
  port: 27019
  db: oo
}

mailgun: {
  api_key: xxxxxxxxx
  domain: localhost
}

# # # # # # # # # # # # # # # #
# Back Server configurations  #
# # # # # # # # # # # # # # # #

worker: {
  logDir: /tmp/oo_logs
}

session: {
  implementation: docker
}

git: {
  hostname: localhost
}

# # # # # # # # # # # # # # # #
# Front Server configurations #
# # # # # # # # # # # # # # # #

auth: {
  google: {
    oauth_key: xxxxxxxxx.apps.googleusercontent.com
    oauth_secret: xxxxxxxxx
  }
  easy: {
    secret: xxxxxxxxx  # make up a long random string
  }
}

front: {
  protocol: http
  hostname: localhost
  port: 8080
  listen_port: 8080
}

# # # # # # # # # # # # #
# Client configurations #
# # # # # # # # # # # # #

client: {
  gacode: xxxxxxxxx
}
